<%- include('components/header', { title }) %>
<!--
  This example requires Tailwind CSS v2.0+ 
  
  This example requires some changes to your config:
  
  ```
  // tailwind.config.js
  module.exports = {
    // ...
    plugins: [
      // ...
      require('@tailwindcss/forms'),
    ]
  }
  ```
-->
<%
  const inputClasses = locals.errors
    ? 'border-red-300 text-red-900 placeholder-red-300 focus:ring-red-500 focus:border-red-500'
    : 'focus:ring-indigo-500 focus:border-indigo-500 border-gray-300';
%> 
<div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
  <form method="POST" action="" class="sm:col-span-4 sm:col-start-2 lg:col-span-2 lg:col-start-3">
    <label for="name" class="block text-sm font-medium text-gray-700">Name: </label>
    <div class="mt-1 flex rounded-md shadow-sm">
      <input type="text" name="name" id="name" class="<%= inputClasses %> block w-full pr-10 focus:outline-none sm:text-sm rounded-md" placeholder="Fantasy, Poetry etc." value="<%= locals.genre && genre.name ? genre.name : '' %>" aria-invalid="true" aria-describedby="email-error">
      <% if (locals.errors) { %>
        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
          <!-- Heroicon name: exclamation-circle -->
          <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>
      <% } %>
    </div>
    <% if (locals.errors) { %>
      <% errors.forEach(error => { %>
      <p class="mt-2 text-sm text-red-600">
        <%= error.msg %>
      </p>
      <% }) %>
    <% } %>
    <div class="pt-5">
      <div class="flex justify-end">
        <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          Save
        </button>
      </div>
    </div>
  </form>
</div>

