<%- include('components/header', { title }) %>
<div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
  <form method="POST" action="" class="sm:col-span-4 sm:col-start-2 lg:col-span-2 lg:col-start-3">
    <label for="first_name" class="block text-sm font-medium text-gray-700">* First name:</label>
    <div class="mt-1 flex rounded-md shadow-sm">
      <input required="true" type="text" name="first_name" id="first_name" class="focus:ring-indigo-500 focus:border-indigo-500 border-gray-300 block w-full pr-10 focus:outline-none sm:text-sm rounded-md">
    </div>

    <label for="family_name" class="block text-sm font-medium text-gray-700">* Family name:</label>
    <div class="mt-1 flex rounded-md shadow-sm">
      <input required="true" type="text" name="family_name" id="family_name" class="focus:ring-indigo-500 focus:border-indigo-500 border-gray-300 block w-full pr-10 focus:outline-none sm:text-sm rounded-md">
    </div>

    <label for="date_of_birth" class="block text-sm font-medium text-gray-700">Date of birth: </label>
    <div class="mt-1 flex rounded-md shadow-sm">
      <input type="date" placeholder="mm/dd/yyyy" name="date_of_birth" id="date_of_birth" class="focus:ring-indigo-500 focus:border-indigo-500 border-gray-300 block w-full pr-10 focus:outline-none sm:text-sm rounded-md">
    </div>

    <label for="date_of_death" class="block text-sm font-medium text-gray-700">Date of death: </label>
    <div class="mt-1 flex rounded-md shadow-sm">
      <input type="date" placeholder="mm/dd/yyyy" name="date_of_death" id="date_of_death" class="focus:ring-indigo-500 focus:border-indigo-500 border-gray-300 block w-full pr-10 focus:outline-none sm:text-sm rounded-md">
    </div>
    <% if (locals.errors) { %>
      <% errors.forEach(error => { %>
      <p class="mt-2 text-sm text-red-600">
        <%= error.msg %>
      </p>
      <% }) %>
    <% } %>
    <div class="pt-5">
      <div class="flex justify-end">
        <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          Save
        </button>
      </div>
    </div>
  </form>
</div>